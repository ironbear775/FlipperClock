<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="@string/setting"
        app:titleTextColor="@color/settingColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <FrameLayout
                android:id="@+id/changeClockColorBtn"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/set_clock_color"
                    android:textColor="@color/settingColor" />

                <Button
                    android:id="@+id/clockColorSetBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:text="@string/reset" />

            </FrameLayout>

            <View style="@style/divideLine" />

            <FrameLayout
                android:id="@+id/changeClockBgColorBtn"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/set_clock_bg_color"
                    android:textColor="@color/settingColor" />

                <Button
                    android:id="@+id/clockBgColorSetBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:text="@string/reset" />

            </FrameLayout>

            <View style="@style/divideLine" />

            <FrameLayout
                android:id="@+id/changeBgColorBtn"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/set_bg_color"
                    android:textColor="@color/settingColor" />

                <Button
                    android:id="@+id/bgColorSetBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:text="@string/reset" />

            </FrameLayout>

            <View style="@style/divideLine" />

            <Switch
                android:id="@+id/use12HourSwitch"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="@string/use_12_hour"
                android:textColor="@color/settingColor" />

            <View style="@style/divideLine" />

            <Switch
                android:id="@+id/showDateSwitch"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="@string/show_date"
                android:textColor="@color/settingColor" />

            <View style="@style/divideLine" />

            <Switch
                android:id="@+id/showSecondSwitch"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="@string/show_second"
                android:textColor="@color/settingColor" />

            <View style="@style/divideLine" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
